<html>

<body>
    <h1>Sick jams my dude!</h1>
    <% if (history) { %>
        <h2>History:</h2>
        <table>
            <tr>
                <th>Name</th>
                <th>Artist</th>
                <th>Album</th>
                <th>Duration</th>
                <th>Performances</th>
                <th></th>
            </tr>
    
            <% history.forEach( (song) => { %>
                <tr>
                    <td>
                        <%= song.name %>
                    </td>
                    <td>
                        <%= song.artist %>
                    </td>
                    <td>
                        <%= song.album %>
                    </td>
                    <td>
                        <%= song.duration %>
                    </td>
                    <td>
                        <%= song.performances%>
                    </td>
                    <td>
                        <a href="/songs/<%= song.id %>">Show</a>
                        <a href="/songs/<%= song.id %>/edit">Edit</a>
                        <a href="/songs/<%= song.id %>/delete">Delete</a>
                    </td>
                    <% }) %>
                </tr>
        </table>

    <%}%>
    <h3>All songs:</h3>
    <table>
        <tr>
            <th>Name</th>
            <th>Artist</th>
            <th>Album</th>
            <th>Duration</th>
            <th>Performances</th>
            <th></th>
        </tr>

        <% songs.forEach( (song) => { %>
            <tr>
                <td>
                    <%= song.name %>
                </td>
                <td>
                    <%= song.artist %>
                </td>
                <td>
                    <%= song.album %>
                </td>
                <td>
                    <%= song.duration %>
                </td>
                <td>
                    <%= song.performances%>
                </td>
                <td>
                    <a href="/songs/<%= song.id %>">Show</a>
                    <a href="/songs/<%= song.id %>/edit">Edit</a>
                    <a href="/songs/<%= song.id %>/delete">Delete</a>
                </td>
                <% }) %>
            </tr>
    </table>
</body>

<a href="/songs/new">New</a>

</html>